<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:padding="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User contact"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/productId"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/order_productName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:text="Food Name"
            android:textStyle="bold" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchButton"
            android:textOn="true"
            android:textOff="false"
            android:layout_toRightOf="@+id/delivery_status"
            android:layout_below="@id/user_contact"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/delivery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/order_productName"
            android:text="Food Delivered"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_productName"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Product Description"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_productName"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/order_description"
            android:paddingLeft="10dp"
            android:text="Payment Status"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_productPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_description"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Product Price"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_description"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/order_productPrice"
            android:paddingLeft="10dp"
            android:text="Quantity:"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_seat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_productPrice"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Seat No."
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_productPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/order_seat"
            android:paddingLeft="10dp"
            android:text="Date:"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>